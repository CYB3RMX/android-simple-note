<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeBlue" parent="AppTheme">
        <item name="colorPrimaryDark">@color/themeBlue</item>
        <item name="colorPrimary">@color/themeBlueLight</item>
        <item name="colorAccent">@color/themeBlueSeconday</item>
    </style>

    <style name="ThemeRed" parent="ThemeBlue">
        <item name="colorPrimaryDark">@color/themeRed</item>
        <item name="colorPrimary">@color/themeRedLight</item>
        <item name="colorAccent">@color/themeRedSecondary</item>
    </style>

    <style name="ThemeOrange" parent="AppTheme">
        <item name="colorPrimaryDark">@color/themeOrange</item>
        <item name="colorPrimary">@color/themeOrangeLight</item>
        <item name="colorAccent">@color/themeOrangeSecondary</item>
    </style>

    <style name="ThemeGreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/themeGreen</item>
        <item name="colorPrimary">@color/themeGreenLight</item>
        <item name="colorAccent">@color/themeGreenSecondary</item>
    </style>

    <style name="ThemePurple" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/themePurple</item>
        <item name="colorPrimary">@color/themePurpleLight</item>
        <item name="colorAccent">@color/themePurpleSecondary</item>
    </style>


</resources>
